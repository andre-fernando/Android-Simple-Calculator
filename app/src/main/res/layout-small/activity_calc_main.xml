<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="6"
        android:columnCount="4">

        <TextView
            android:id="@+id/display"
            android:layout_width="385dp"
            android:layout_height="95dp"
            android:layout_columnSpan="4"
            android:layout_row="0"
            android:ems="10"
            android:textSize="40sp"
            android:background="@android:color/transparent"
            android:textStyle="bold" />

        <!--First Row  -->
        <Button
            android:id="@+id/Clear"
            style="@style/ButtonSmall"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="40sp"
            android:onClick="clickC"
            android:text="@string/Clear" />

        <Button
            android:id="@+id/ClearAll"
            style="@style/ButtonSmall"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="40sp"
            android:onClick="clickAC"
            android:text="@string/ClearAll" />

        <Button
            android:id="@+id/Modulo"
            style="@style/ButtonSmall"
            android:layout_column="2"
            android:layout_row="1"
            android:padding="0dp"
            android:layout_marginTop="-4.5dp"
            android:onClick="clickModulo"
            android:text="@string/Modulo"
            android:textSize="30sp" />

        <Button
            android:id="@+id/Divide"
            style="@style/ButtonSmall"
            android:layout_column="3"
            android:layout_row="1"
            android:textSize="40sp"
            android:onClick="clickDivide"
            android:text="@string/Divide" />

        <!--Second Row  -->
        <Button
            android:id="@+id/Seven"
            style="@style/ButtonSmall"
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="40sp"
            android:onClick="clickSeven"
            android:textAlignment="center"
            android:text="@string/Seven" />

        <Button
            android:id="@+id/Eight"
            style="@style/ButtonSmall"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="40sp"
            android:onClick="clickEight"
            android:text="@string/Eight" />

        <Button
            android:id="@+id/Nine"
            style="@style/ButtonSmall"
            android:layout_column="2"
            android:textSize="40sp"
            android:onClick="clickNine"
            android:layout_row="2"
            android:text="@string/Nine" />

        <Button
            android:id="@+id/Multiply"
            style="@style/ButtonSmall"
            android:layout_column="3"
            android:layout_row="2"
            android:textSize="40sp"
            android:onClick="clickMultiply"
            android:text="@string/Multiply" />

        <!--Third Row  -->
        <Button
            android:id="@+id/Four"
            style="@style/ButtonSmall"
            android:layout_column="0"
            android:layout_row="3"
            android:textSize="40sp"
            android:onClick="clickFour"
            android:textAlignment="center"
            android:text="@string/Four" />

        <Button
            android:id="@+id/Five"
            style="@style/ButtonSmall"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="40sp"
            android:onClick="clickFive"
            android:text="@string/Five" />

        <Button
            android:id="@+id/Six"
            style="@style/ButtonSmall"
            android:layout_column="2"
            android:textSize="40sp"
            android:onClick="clickSix"
            android:layout_row="3"
            android:text="@string/Six" />

        <Button
            android:id="@+id/Subtract"
            style="@style/ButtonSmall"
            android:layout_column="3"
            android:layout_row="3"
            android:textSize="40sp"
            android:onClick="clickSubtract"
            android:text="@string/Subtract" />

        <!--Fourth Row  -->
        <Button
            android:id="@+id/One"
            style="@style/ButtonSmall"
            android:layout_column="0"
            android:layout_row="4"
            android:textSize="40sp"
            android:onClick="clickOne"
            android:textAlignment="center"
            android:text="@string/One" />

        <Button
            android:id="@+id/Two"
            style="@style/ButtonSmall"
            android:layout_column="1"
            android:layout_row="4"
            android:textSize="40sp"
            android:onClick="clickTwo"
            android:text="@string/Two" />

        <Button
            android:id="@+id/Three"
            style="@style/ButtonSmall"
            android:layout_column="2"
            android:textSize="40sp"
            android:onClick="clickThree"
            android:layout_row="4"
            android:text="@string/Three" />

        <Button
            android:id="@+id/Add"
            style="@style/ButtonSmall"
            android:layout_column="3"
            android:layout_row="4"
            android:textSize="40sp"
            android:onClick="clickAdd"
            android:text="@string/Add" />

        <!--Fifth Row  -->
        <Button
            android:id="@+id/Zero"
            style="@style/Button0Small"
            android:layout_column="0"
            android:layout_row="5"
            android:layout_columnSpan="2"
            android:textSize="40sp"
            android:onClick="clickZero"
            android:textAlignment="center"
            android:text="@string/Zero" />

        <Button
            android:id="@+id/FullStop"
            style="@style/ButtonSmall"
            android:layout_column="2"
            android:textSize="40sp"
            android:onClick="clickFullStop"
            android:layout_row="5"
            android:text="@string/FullStop" />

        <Button
            android:id="@+id/Equal"
            style="@style/ButtonSmall"
            android:layout_column="3"
            android:layout_row="5"
            android:textSize="40sp"
            android:onClick="clickEqual"
            android:text="@string/Equal" />

    </GridLayout>

</LinearLayout>